# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/agent_db
REDIS_URL=redis://localhost:6379/0

# Checkpoint Configuration
CHECKPOINT_TYPE=postgres

# Workspace Configuration
WORKSPACE_BASE_DIR=/tmp/agent-work
MAX_CONCURRENT_REQUESTS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/agent-loop.log

# LangSmith (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=agent-loop

# MCP Servers Configuration
MCP_SERVERS_CONFIG=config/mcp_servers.yaml

# Skills Directory
SKILLS_DIR=skills